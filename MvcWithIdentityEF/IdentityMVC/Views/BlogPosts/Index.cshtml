@model IEnumerable<DataModel.Identity.BlogPost>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfPost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TitleOfPost)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.PictureContent)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.User.UserName)
        </td>
        <td>
            <div>
                @Html.Raw(item.PostContent)
                @*@item.TextPost*@
            </div>
            
            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfPost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TitleOfPost)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.PictureContent)
        </td>*@
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
