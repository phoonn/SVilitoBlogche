@model IEnumerable<DataModel.Identity.BlogPost>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>FITLIFE<span>.</span></h1>
    <p class="lead">“Strength <span>does not come from the physical capacity. It comes from an indomitable will.”</span> </p>
    <p>@Html.ActionLink("Check our blog !", "Index", "BlogPosts",null, htmlAttributes: new { @class = "btn btn-warning btn-lg" })</p>
</div>
@*<div class="bg-image jumbotron"></div>

<div class="bg-text">
    <h1>FITLIFE.</h1>
    <p>free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript</p>
</div>*@
<div class="section">
    <!-- container -->
    <div class="container">
        @*<div class="row">*@
        @foreach (var item in Model)
        {
        <div class="post post-thumb col-md-6">
            @if (item.PictureContent != null)
            {
                var base64 = Convert.ToBase64String(item.PictureContent.ToArray());
                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);

                <a href='@Url.Action("Details", "BlogPosts", new { id = item.Id})'>
                    <img src='@imgSrc' class="postImgCss" />
                </a>

            }
            else
            {
                <a href='@Url.Action("Details", "BlogPosts", new { id = item.Id})'>
                    <img src="@Url.Content("~/Content/Images/picture-not-available.jpg")" class="postImgCss" />
                </a>
            }
            <div class="post-body">
                <div class="post-meta">
                    <a class="post-category cat-2" href="category.html">@item.User.UserName</a>
                    <span class="post-date">@item.DateOfPost.ToShortDateString()</span>
                </div>
                <h3 class="post-title"> <a href='@Url.Action("Details", "BlogPosts", new { id = item.Id})'>@item.TitleOfPost</a></h3>
            </div>
        </div>
        }
        @*</div>*@
    </div>
</div>
